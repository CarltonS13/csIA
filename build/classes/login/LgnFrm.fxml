<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LgnFrmCtrlr">
    <children>
        <Label fx:id="error" layoutX="7.0" layoutY="12.0" minHeight="16" minWidth="69" prefHeight="27.0" prefWidth="385.0" textAlignment="CENTER" textFill="RED" wrapText="true" />
      <Button fx:id="go" layoutX="146.0" layoutY="220.0" mnemonicParsing="false" onAction="#goBtnPressed" prefHeight="47.0" prefWidth="98.0" text="Login">
