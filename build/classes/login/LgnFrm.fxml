            <Tooltip text="Login to Meeting Planner" />
         </tooltip>
      </Button>
      <Label fx:id="ins1" layoutX="136.0" layoutY="25.0" prefHeight="74.0" prefWidth="130.0" text="Login" textAlignment="CENTER" underline="true">
