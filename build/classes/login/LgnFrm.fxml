            <Font size="50.0" />
         </font>
      </Label>
      <Label fx:id="ins2" layoutX="90.0" layoutY="91.0" prefHeight="27.0" prefWidth="228.0" text="Please enter your username and password" textAlignment="CENTER" />
      <TextField fx:id="user" layoutX="90.0" layoutY="121.0" prefHeight="37.0" prefWidth="221.0" promptText="Username">
